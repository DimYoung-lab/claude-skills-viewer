{
  "name": "claude-skills-viewer",
  "version": "1.0.4",
  "description": "Claude Code Skills Viewer - 查看和管理本地安装的Skills",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "vite --mode electron",
    "electron:build": "npm run build && electron-builder",
    "start": "electron ."
  },
  "keywords": [
    "claude",
    "skills",
    "viewer",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.2.1",
    "electron": "^25.9.8",
    "electron-builder": "^23.6.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.21.0",
    "typescript": "^5.5.3",
    "vite": "^5.4.2",
    "vite-plugin-electron": "^0.28.7",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "com.claude.skillsviewer",
    "productName": "Claude Skills Viewer",
    "directories": {
      "output": "release7"
    },
    "win": {
      "target": "dir"
    },
    "portable": {
      "artifactName": "ClaudeSkillsViewer.exe"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "asar": false,
    "npmRebuild": false,
    "electronDist": "node_modules/electron/dist",
    "electronVersion": "25.9.8"
  }
}
